<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Text -->

    <style name="TextLabel">
        <item name="android:textSize">@dimen/text_size_label</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDetail">
        <item name="android:textSize">@dimen/text_size_info</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextDetail.End">
        <item name="android:gravity">end|right</item>
    </style>

</resources>
